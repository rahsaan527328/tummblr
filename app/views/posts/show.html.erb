<div id="post_content">
	<h1 class="title"> 
		<%= @post.title %>
	</h1>

	<p class="date"> 
	Submited <%= time_ago_in_words(@post.created_at) %> ago |
	<%= link_to 'Edit', edit_post_path(@post) %> |
	<%= link_to 'Delete', post_path(@post), method: :delte, data: { confirm: ' You Sure?! '} %> 
	</p>

	<p class="body">
		<%= @post.body %>
	</p>
</di