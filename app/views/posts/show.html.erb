<div id="post_content">
	<h1 class="title"> 
		<%= @post.title %>
	</h1>

	<p class="date"> 
		Submited <%= time_ago_in_words(@post.created_at) %> ago |
	<h2>-----------------</h2>
	<p> <%= link_to "Edit", edit_post_path %> |  <%= link_to "Delete", :confirm => "Are you sure?", :method => :delete %> </p>
	</p>
	


	<p class="body">
		<%= @post.body %>
	</p>

</div>